<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <ImageView
            android:id="@+id/hk_1"
            android:src="@drawable/kc1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FF9900"
            android:scaleType="fitXY"/>
        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_1"
            android:background="@drawable/shape"
            android:text="嘉頓山 Garden Hill"
            android:textSize="30dp"/>

        <ImageView
            android:id="@+id/hk_2"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_below="@id/b1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc2" />
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_2"
            android:background="@drawable/shape"
            android:text="黃金電腦商場 Golden Computer Arcade "
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/hk_3"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@id/b2"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc3" />
        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_3"
            android:background="@drawable/shape"
            android:text="深水埗車仔檔 "
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/hk_4"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@id/b3"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc4" />
        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_4"
            android:background="@drawable/shape"
            android:text="馬騮山Kam Shan Country Park"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/hk_5"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@id/b4"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc5" />
        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_5"
            android:background="@drawable/shape"
            android:text="城門水塘 Shing Mun Reservoir"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/hk_6"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@id/b5"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc6" />
        <Button
            android:id="@+id/b6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_6"
            android:background="@drawable/shape"
            android:text="坤記糕品專家 Kwan Kee Store"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/hk_7"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_below="@id/b6"
            android:background="#FF9900"
            android:scaleType="fitXY"
            android:src="@drawable/kc7" />
        <Button
            android:id="@+id/b7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/hk_7"
            android:background="@drawable/shape"
            android:text="土瓜灣青春工藝 ChingChun Warehouse"
            android:textSize="20dp"/>




    </LinearLayout>
</ScrollView>
